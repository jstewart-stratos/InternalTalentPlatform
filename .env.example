# Azure Environment Configuration Template
# Copy this file to .env for local development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/stratos_skill_swap

# Session Security
SESSION_SECRET=your-generated-secure-session-secret-minimum-32-characters

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# AI Integration (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here

# LinkedIn OAuth (Optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Azure Specific (Auto-configured in Azure App Service)
NODE_ENV=production
PORT=8080
WEBSITE_NODE_DEFAULT_VERSION=20.x
SCM_DO_BUILD_DURING_DEPLOYMENT=true

# Application Insights (Auto-configured in Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string